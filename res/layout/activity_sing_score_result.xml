<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="700dp"
    android:layout_height="392dp"
    tools:context="com.player.boxplayer.karaok.SingScoreResultActivity" 
    android:background="@drawable/score_bg">
    <TextView 
        android:id="@+id/tv_titel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/score_titel"
        android:textColor="#1872e1"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"/>
    
    <ImageView 
        android:id="@+id/iv_gequ"
        android:layout_width="92.5dp"
        android:layout_height="92.5dp"
        android:src="@drawable/gequ"
        android:layout_below="@+id/tv_titel"
        android:layout_marginLeft="50dp" 
        android:layout_marginTop="30dp"	
        android:scaleType="fitXY" 		/>
    <TextView 
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_gequ"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:textSize="18sp"/>
		 <TextView 
        android:id="@+id/tv_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_song_name"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:textSize="18sp"/>
     <TextView 
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_titel"
        android:layout_toRightOf="@+id/iv_gequ"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="55dp"
        android:text="@string/score_sing"
        android:textColor="#fff"
        android:textSize="24sp"/>
   <!--     <TextView 
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_titel"
        android:layout_toRightOf="@+id/tv1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="63dp"
        android:textColor="#00a2ff"
        android:textSize="38sp"/>-->
        <com.player.boxplayer.karaok.ScoreWithPicView
        android:id="@+id/show_sing_result"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_titel"
        android:layout_toRightOf="@+id/tv1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp" />
       <TextView 
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
       	android:layout_marginLeft="60dp"
        android:text="@string/score_tip"
        android:textColor="#fff"
        android:textSize="24sp"/>
        <TextView 
        android:id="@+id/tv_system_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tv2"
        android:layout_marginBottom="33dp"
        android:textColor="#00c783"
        android:textSize="18sp"
		android:layout_marginLeft="10dp"/>
		<RelativeLayout 
		    android:layout_width="69dp"
		    android:layout_height="69dp"
		    android:layout_alignParentRight="true"
		     android:layout_centerVertical="true"
		    android:layout_marginRight="20dp">
		     <TextView 
		        android:id="@+id/tv_say"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#ff9000"
		        android:textSize="16sp"
		        android:layout_centerHorizontal="true"
		        android:visibility="gone"/>
		    <ImageView 
		        android:id="@+id/iv_say"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:scaleType="fitXY"
		        android:layout_below="@+id/tv_say"
		   />
		</RelativeLayout>
 

</RelativeLayout>
