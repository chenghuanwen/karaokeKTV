<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70.0dip"
    android:drawingCacheQuality="high"
    android:minHeight="70.0dip"
    android:orientation="horizontal" 
    android:background="@drawable/sort_list_selecter"
	android:descendantFocusability="afterDescendants"
	>
	<TextView 
	   android:id="@+id/luyin_title" 
		android:layout_width="0dp"
		android:ellipsize="end"
		android:layout_weight="1"
		android:layout_height="wrap_content"
		android:gravity="center_vertical" />
    <ImageButton
		android:id="@+id/luyin_share" 
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:gravity="center_vertical"
		android:textStyle="bold"
		android:src="@drawable/exprot"
		android:layout_gravity="center_vertical"
		android:nextFocusLeft="@+id/luyin_delete"
		android:layout_marginRight="15dp"/>
	<ImageButton
        android:id="@+id/luyin_delete"
       android:layout_width="30dp"
		android:layout_height="30dp"
		android:gravity="center_vertical"
		android:textStyle="bold"
		android:src="@drawable/delete"
		android:layout_gravity="center_vertical"
		android:layout_marginRight="15dp"/>
</LinearLayout>