<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="700dp"
    android:layout_height="392dp"
    tools:context="com.player.boxplayer.karaok.SingScoreResultActivity" 
    android:background="@drawable/beijing">
    <TextView 
        android:id="@+id/tv_titel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/score_titel"
        android:textColor="#fff"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"/>
    
    <ImageView 
        android:id="@+id/iv_gequ"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/gequ"
        android:layout_below="@+id/tv_titel"
        android:layout_marginLeft="50dp" 
        android:layout_marginTop="30dp"	
        android:scaleType="fitXY" 		/>
    <LinearLayout 
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_titel"
        android:layout_toRightOf="@+id/iv_gequ"
        android:layout_marginTop="30dp"	
        android:layout_marginLeft="15dp">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pingfen1"
            android:layout_gravity="center_vertical"/>
         <TextView 
		 android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score_sing"
        android:textColor="#fff"
        android:textSize="24sp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"/>
          <com.player.boxplayer.karaok.ScoreWithPicView
        android:id="@+id/show_sing_result"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tv_titel"
        android:layout_toRightOf="@+id/tv1" 
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
            <ImageView 
		        android:id="@+id/iv_say"
		        android:layout_width="80dp"
		        android:layout_height="80dp"
		        android:scaleType="fitXY"
		        android:src="@drawable/good"
		   />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll1"
        android:layout_toRightOf="@+id/iv_gequ"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/geming1"/>
        <TextView 
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll2"
        android:layout_toRightOf="@+id/iv_gequ"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/geshou2"/>           
		 <TextView 
        android:id="@+id/tv_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"/>
        
    </LinearLayout>
    
       <TextView 
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
       	android:layout_marginLeft="60dp"
        android:text="@string/score_tip"
        android:textColor="#fff"
        android:textSize="24sp"/>
        <TextView 
        android:id="@+id/tv_system_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tv2"
        android:layout_marginBottom="33dp"
        android:textColor="#00c783"
        android:textSize="18sp"
		android:layout_marginLeft="10dp"/>
		
</RelativeLayout>
